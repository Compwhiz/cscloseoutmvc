<!DOCTYPE html>
<html data-ng-app="csCloseOut">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body data-ng-controller="RootController as root">
    <toaster-container toaster-options="{'position-class': 'toast-top-center','time-out': 0,'spinner':false,'close-button':true}"></toaster-container>
    @*<div class="right">
        <a data-ng-click="root.openSettingsModal()">
            <span class="fa fa-lg fa-gear"></span>
        </a>
    </div>*@
    <div class="body-content exl-top-padding" data-ng-cloak="">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/lodash")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/foundation")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
